<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminAgentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewDeviceType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Device type: Admin Agent"
            tools:ignore="HardcodedText"
            android:textSize="20sp"
            android:layout_marginTop="64dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/textViewConnectingStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not connected"
            tools:ignore="HardcodedText"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/buttonScanManufacturer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manufacturer: Connect to VM"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/buttonScan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin Agent: Connect to VM"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/buttonAdvertising"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin Agent: Advertise for Voter"
            tools:ignore="HardcodedText"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/buttonInit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manufacturer: Init device"
            tools:ignore="HardcodedText"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/buttonIssueOwnershipUTicket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manufacturer: Issue Ownership UTicket"
            tools:ignore="HardcodedText"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


        <Button
            android:id="@+id/buttonApplyOwnershipUTicket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin Agent: Apply Ownership UTicket"
            tools:ignore="HardcodedText"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/buttonGetData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Data"
            tools:ignore="HardcodedText"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/buttonApplyConfigUTicket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin Agent: Apply Config UTicket"
            tools:ignore="HardcodedText"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/buttonPermissionlessAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin Agent: Apply Permissionless UTicket"
            tools:ignore="HardcodedText"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/buttonApplyTallyUTicket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin Agent: Apply Tally UTicket"
            tools:ignore="HardcodedText"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/buttonShowRTickets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show RTickets"
            tools:ignore="HardcodedText"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/buttonDisconnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disconnect"
            tools:ignore="HardcodedText"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="64dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </LinearLayout>

</ScrollView>